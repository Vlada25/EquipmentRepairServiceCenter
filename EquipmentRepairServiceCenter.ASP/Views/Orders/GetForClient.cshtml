@model List<Order>

@{
    ViewData["Title"] = "Orders";

    int index = 1;
}

<div style="padding-bottom: 30px;">
    <h3 class="h3-above-table">Orders</h3>

    <table class="table">
        <thead>
            <tr>
                <th>Number</th>
                <th><a href="/Orders/SortForClients?sortedFieldNumber=1">Order Date 🠕🠗</a></th>
                <th><a href="/Orders/SortForClients?sortedFieldNumber=2">Equipment Serial Number 🠕🠗</a></th>
                <th>Equipment Return Date</th>
                <th><a href="/Orders/SortForClients?sortedFieldNumber=4">Fault 🠕🠗</a></th>
                <th><a href="/Orders/SortForClients?sortedFieldNumber=5">Serviced Store 🠕🠗</a></th>
                <th><a href="/Orders/SortForClients?sortedFieldNumber=6">Employee 🠕🠗</a></th>
                <th><a href="/Orders/SortForClients?sortedFieldNumber=7">Price 🠕🠗</a></th>
                <th><a href="/Orders/SortForClients?sortedFieldNumber=8">Guarantee (months) 🠕🠗</a></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in @Model)
            {
                <tr>
                    <td>@index</td>
                    <td>@order.OrderDate</td>
                    <td>@order.EquipmentSerialNumber</td>
                    <td>@order.EquipmentReturnDate</td>
                    <td>@order.Fault.Name, @order.Fault.RepairingModel.Name</td>
                    <td>@order.ServicedStore.Name</td>
                    <td>@order.Employee.Surname @order.Employee.Name @order.Employee.MiddleName, @order.Employee.Position</td>
                    <td>@order.Price</td>
                    @if (@order.Guarantee)
                    {
                        <td>@order.GuaranteePeriodInMonth</td>
                    }
                    else
                    {
                        <td>-</td>
                    }
                </tr>

                index++;
            }
        </tbody>
    </table>

    <a class="back-btn" href="/Home/Index">Back</a>
</div>