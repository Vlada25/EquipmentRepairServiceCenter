@model FaultForUpdateDto

@{
    ViewData["Title"] = "Faults";
}

<div id="dropdown" class="dropdown">
    <button class="dropbtn">Menu</button>
    <div class="dropdown-content">
        <a href="/Clients/GetAll">Clients</a>
        <a href="/Employees/GetAll">Employees</a>
        <a href="/Faults/GetAll">Faults</a>
        <a href="/Orders/GetAll">Orders</a>
        <a href="/RepairingModels/GetAll">Repairing Models</a>
        <a href="/ServicedStores/GetAll">Serviced Stores</a>
        <a href="/SpareParts/GetAll">Spare Parts</a>
        <a href="/UsedSpareParts/GetAll">Used Spare Parts</a>
        <a href="/Users/GetAll">Users</a>
    </div>
</div>

<div style="margin-bottom: 50px;">
    <h3>Fault Update</h3>

    <form class="creation-form" method="post" asp-action="Update">
        <div class="field-container">
            <label asp-for="Id"></label>
            <div>
                <input class="input-props" asp-for="Id" readonly />
            </div>
        </div>

        <div class="field-container">
            <label asp-for="RepairingMethods">Repairing Methods</label>
            <div>
                <textarea style="height: 130px; width: 350px;" class="input-props" asp-for="RepairingMethods"></textarea>
                <span class="error-mes-span" style="color: red; font-size: 90%;" asp-validation-for="RepairingMethods"></span>
            </div>
        </div>

        <div class="field-container">
            <label asp-for="Price">Price (old price: @Model.Price)</label>
            <div>
                <input class="input-props" asp-for="Price"/>
                <span class="error-mes-span" style="color: red; font-size: 90%;" asp-validation-for="Price"></span>
            </div>
        </div>

        <div class="action-btn-container">
            <button class="action-btn" type="submit">Update</button>
            <a class="back-btn" href="/Faults/GetAll">Back</a>
        </div>
    </form>
</div>