@model FaultForUpdateDto

@{
    ViewData["Title"] = "Faults";
}

<div style="margin-bottom: 50px;">
    <h3>Fault Update</h3>

    <form class="creation-form" method="post" asp-action="Update">
        <div class="field-container">
            <label asp-for="Id"></label>
            <div>
                <input class="input-props" asp-for="Id" readonly />
            </div>
        </div>

        <div class="field-container">
            <label asp-for="RepairingMethods">Repairing Methods</label>
            <div>
                <textarea style="height: 130px; width: 350px;" class="input-props" asp-for="RepairingMethods"></textarea>
                <span class="error-mes-span" asp-validation-for="RepairingMethods"></span>
            </div>
        </div>

        <div class="field-container">
            <label asp-for="Price"></label>
            <div>
                <input class="input-props" asp-for="Price" type="number" />
                <span class="error-mes-span" asp-validation-for="Price"></span>
            </div>
        </div>

        <div class="action-btn-container">
            <button class="action-btn" type="submit">Update</button>
            <a class="back-btn" href="/Home/AdminsPage">Back</a>
        </div>
    </form>
</div>