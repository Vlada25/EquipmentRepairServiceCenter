@model List<UserDto>

@{
    ViewData["Title"] = "Users";

    int index = 1;
}

<div id="dropdown" class="dropdown">
    <button class="dropbtn">Menu</button>
    <div class="dropdown-content">
        <a href="/Clients/GetAll">Clients</a>
        <a href="/Employees/GetAll">Employees</a>
        <a href="/Faults/GetAll">Faults</a>
        <a href="/Orders/GetAll">Orders</a>
        <a href="/RepairingModels/GetAll">Repairing Models</a>
        <a href="/ServicedStores/GetAll">Serviced Stores</a>
        <a href="/SpareParts/GetAll">Spare Parts</a>
        <a href="/UsedSpareParts/GetAll">Used Spare Parts</a>
        <a href="/Users/GetAll">Users</a>
    </div>
</div>

<div style="padding-bottom: 30px;">
    <h3 class="h3-above-table">Users</h3>

    <a href="/Accounts/RegisterUser" class="a-create">Create</a>

    <table class="table">
        <thead>
            <tr>
                <th>Number</th>
                <th><a href="/Users/Get?sortedFieldNumber=1">UserName 🠕🠗</a></th>
                <th><a href="/Users/Get?sortedFieldNumber=2">Email 🠕🠗</a></th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in @Model)
            {
                <tr>
                    <td>@index</td>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td><a href="/Users/Delete?id=@user.Id" class="ud-button">Delete</a></td>
                </tr>

                index++;
            }
        </tbody>
    </table>

    <a href="/Users/GetMore" class="a-create">Show 20 more entries</a>
    <a class="back-btn" href="/Home/Index">Back</a>
</div>