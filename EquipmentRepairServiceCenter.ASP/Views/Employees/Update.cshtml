@model EmployeeUpdatedViewModel

@{
    ViewData["Title"] = "Employees";

    var positions = Model.Positions
        .Select(i => new SelectListItem()
                { Text = i, Value = i });

    var servicedStores = Model.ServicedStores
        .Select(i => new SelectListItem()
                {
                    Text = $"{i.Name}; {i.Address}",
                    Value = $"{i.Name}; {i.Address}"
                });
}

<div id="dropdown" class="dropdown">
    <button class="dropbtn">Menu</button>
    <div class="dropdown-content">
        <a href="/Clients/GetAll">Clients</a>
        <a href="/Employees/GetAll">Employees</a>
        <a href="/Faults/GetAll">Faults</a>
        <a href="/Orders/GetAll">Orders</a>
    <a href="/RepairingModels/GetAll">Repairing Models</a>
        <a href="/ServicedStores/GetAll">Serviced Stores</a>
        <a href="/SpareParts/GetAll">Spare Parts</a>
        <a href="/UsedSpareParts/GetAll">Used Spare Parts</a>
        <a href="/Users/GetAll">Users</a>
    </div>
</div>

<div>
    <h3>Update Employee</h3>

    @if (ViewData["Message"] != null)
    {
        <h5 style="color: red">@ViewData["Message"]</h5>
    }

    <form class="creation-form" method="post" asp-action="Update">
        <div class="field-container">
            <label asp-for="Id"></label>
            <div>
                <input class="input-props" asp-for="Id" readonly />
            </div>
        </div>

        <div class="field-container">
            <label asp-for="Surname"></label>
            <div>
                <input class="input-props" asp-for="Surname" />
                <span class="error-mes-span" style="color: red; font-size: 90%;" asp-validation-for="Surname"></span>
            </div>
        </div>

        <div class="field-container">
            <label asp-for="Name"></label>
            <div>
                <input class="input-props" asp-for="Name" />
                <span class="error-mes-span" style="color: red; font-size: 90%;" asp-validation-for="Name"></span>
            </div>
        </div>

        <div class="field-container">
            <label asp-for="MiddleName">Middle name</label>
            <div>
                <input class="input-props" asp-for="MiddleName" />
                <span class="error-mes-span" style="color: red; font-size: 90%;" asp-validation-for="MiddleName"></span>
            </div>
        </div>

        <div class="field-container">
            <label asp-for="Position">Position</label>
            <div>
                <select class="select-props" asp-for="Position" asp-items="@positions"></select>
            </div>
        </div>

        <div class="field-container">
            <label asp-for="WorkExperienceInYears">Work Experience (years)</label>
            <div>
                <input class="input-props" asp-for="WorkExperienceInYears" type="number"/>
                <span class="error-mes-span" style="color: red; font-size: 90%;" asp-validation-for="WorkExperienceInYears"></span>
            </div>
        </div>

        <div class="field-container">
            <label asp-for="ServicedStore">Serviced Store</label>
            <div>
                <select class="select-props" asp-for="ServicedStore" asp-items="@servicedStores"></select>
            </div>
        </div>

        <div class="action-btn-container">
            <button class="action-btn" type="submit">Update</button>
            <a class="back-btn" href="/Employees/GetAll">Back</a>
        </div>
    </form>
</div>