@model List<ServicedStore>

@{
    ViewData["Title"] = "Serviced Stores";

    int index = 1;
}

<div style="padding-bottom: 30px;">
    <h3 class="h3-above-table">Serviced Stores</h3>

    <a href="/ServicedStores/Create" class="a-create">Create</a>

    <table class="table">
        <thead>
            <tr>
                <th>Number</th>
                <th>Id</th>
                <th>Name</th>
                <th>Address</th>
                <th>Phone Number</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var servicedStore in @Model)
            {
                <tr>
                    <td>@index</td>
                    <td>@servicedStore.Id</td>
                    <td>@servicedStore.Name</td>
                    <td>@servicedStore.Address</td>
                    <td>@servicedStore.PhoneNumber</td>
                    <td><a href="/ServicedStores/Update?id=@servicedStore.Id" class="ud-button">Update</a></td>
                    <td><a href="/ServicedStores/Delete?id=@servicedStore.Id" class="ud-button">Delete</a></td>
                </tr>

                index++;
            }
        </tbody>
    </table>

    <a href="/ServicedStores/GetMore" class="a-create">Show 20 more entries</a>
    <a class="back-btn" href="/Home/AdminsPage">Back</a>
</div>