@model RegisterUser

<div id="dropdown" class="dropdown">
    <button class="dropbtn">Menu</button>
    <div class="dropdown-content">
        <a href="/Clients/GetAll">Clients</a>
        <a href="/Employees/GetAll">Employees</a>
        <a href="/Faults/GetAll">Faults</a>
    <a href="/Orders/GetAll">Orders</a>
        <a href="/RepairingModels/GetAll">Repairing Models</a>
        <a href="/ServicedStores/GetAll">Serviced Stores</a>
        <a href="/SpareParts/GetAll">Spare Parts</a>
        <a href="/UsedSpareParts/GetAll">Used Spare Parts</a>
        <a href="/Users/GetAll">Users</a>
    </div>
</div>

<div style="margin-bottom: 50px;">
    <h3>Registration</h3>
    @if (ViewData["Message"] != null)
    {
        <h5 style="color: red">@ViewData["Message"]</h5>
    }
    <form class="creation-form" method="post" asp-action="RegisterClient">
        <div class="field-container">
            <label asp-for="Surname"></label>
            <div>
                <input class="input-props" asp-for="Surname" />
                <span class="error-mes-span" style="color: red; font-size: 90%;" asp-validation-for="Surname"></span>
            </div>
        </div>

        <div class="field-container">
            <label asp-for="Name"></label>
            <div>
                <input class="input-props" asp-for="Name" />
                <span class="error-mes-span" style="color: red; font-size: 90%;" asp-validation-for="Name"></span>
            </div>
        </div>

        <div class="field-container">
            <label asp-for="MiddleName">Middle name</label>
            <div>
                <input class="input-props" asp-for="MiddleName" />
                <span class="error-mes-span" style="color: red; font-size: 90%;" asp-validation-for="MiddleName"></span>
            </div>
        </div>

        <div class="field-container">
            <label asp-for="UserName">Login</label>
            <div>
                <input class="input-props" asp-for="UserName" />
                <span class="error-mes-span" style="color: red; font-size: 90%;" asp-validation-for="UserName"></span>
            </div>
        </div>

        <div class="field-container">
            <label asp-for="Email"></label>
            <div>
                <input class="input-props" asp-for="Email" />
                <span class="error-mes-span" style="color: red; font-size: 90%;" asp-validation-for="Email"></span>
            </div>
        </div>

        <div class="field-container">
            <label asp-for="Password"></label>
            <div>
                <input class="input-props" asp-for="Password" />
                <span class="error-mes-span" style="color: red; font-size: 90%;" asp-validation-for="Password"></span>
            </div>
        </div>

        <div class="field-container">
            <label asp-for="ConfirmPassword">Confirm Password</label>
            <div>
                <input class="input-props" asp-for="ConfirmPassword" />
                <span class="error-mes-span" style="color: red; font-size: 90%;" asp-validation-for="ConfirmPassword"></span>
            </div>
        </div>

        <div class="action-btn-container">
            <button class="action-btn" type="submit">Register</button>
            <a class="back-btn" href="/Clients/GetAll">Back</a>
        </div>
    </form>
</div>