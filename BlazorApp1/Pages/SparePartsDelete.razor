@page "/spareParts/delete/{id}"

<PageTitle>Spare parts page</PageTitle>

@using BlazorApp1.Data
@using EquipmentRepairServiceCenter.Interfaces.Services;
@inject ISparePartsService SparePartsService
@inject NavigationManager NavigationManager

<h2>Spare Part Delete</h2>
<br />
<div class="form-group">
    <h4>Do you want to delete spare part @name?</h4>
</div>
<br />
<div class="form-group">
    <input type="submit" value="Delete" @onclick="(async () => await DeleteSparePart())" class="btn btn-danger" />
    <input type="submit" value="Cancel" @onclick="(() => Cancel())" class="btn btn-warning" />
</div>

@code {
    [Parameter]
    public string id { get; set; }

    private string name;

    protected override async Task OnParametersSetAsync()
    {
        var entity = await SparePartsService.GetById(Guid.Parse(id));

        name = entity.Name;
    }

    private async Task DeleteSparePart()
    {
        await SparePartsService.Delete(Guid.Parse(id));

        Cancel();
    }

    private void Cancel()
    {
        NavigationManager.NavigateTo("/spareParts");
    }
}